<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VCare">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity android:name=".ArticleWebView" />
        <activity android:name=".ThanksSubmit" />
        <activity android:name=".Mindfulness" />
        <activity android:name=".Menu" />
        <activity android:name=".AboutUs" />
        <activity android:name=".DailyQuote" />
        <activity android:name=".JournalPage" />
        <activity android:name=".SavedScreen" />
        <activity android:name=".RegisterPage" />
        <activity android:name=".ForgotPassPage" />
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AccountInfo" />
        <activity android:name=".AccountSettings" />
        <activity android:name=".HomeScreen" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>