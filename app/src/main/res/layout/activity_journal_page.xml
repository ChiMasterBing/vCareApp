<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/journal"
    tools:context=".JournalPage"
    android:padding="18dp">

    <ImageButton
        android:id="@+id/backJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:srcCompat="@drawable/ic_arrowback" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/journalRecView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageBig"
        app:layout_constraintTop_toBottomOf="@+id/backJournal"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="10dp"
        />

    <ImageView
        android:id="@+id/imageBig"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journalRecView" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:ems="10"
        android:fontFamily="@font/roboto_mono"
        android:gravity="start|top"
        android:hint="Start writing here..."
        android:inputType="textMultiLine"
        android:onClick="onEditTextClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journalRecView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Response"
        app:backgroundTint="#BEE3DB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"
        android:onClick="onSaveBtnClicked"/>
</androidx.constraintlayout.widget.ConstraintLayout>