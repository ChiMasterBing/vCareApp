<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedScreen">


    <ImageButton
        android:id="@+id/backSaved"
        android:layout_width="35dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/savedText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/savedText"
        android:layout_width="140dp"
        android:layout_height="105dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="center_vertical|center_horizontal"
        android:text="Saved"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/promptsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <Button
        android:id="@+id/promptsButton"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/promptsround"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="bottom|left"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:text="prompts"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/articlesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/articlesButton"
        android:layout_width="376dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/articlesround"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="bottom|left"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:text="articles"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/quotesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/allSavedButton"
        android:layout_width="376dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/allsavedround"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="bottom|left"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:text="all saved"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/quotesButton"
        android:layout_width="376dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/quotesround"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="bottom|left"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:text="quotes"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/allSavedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>