<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu"
    android:padding="18dp">

    <ImageButton
        android:id="@+id/backMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_arrowback" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="18dp">

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/droid_sans_mono"
            android:text="Menu"
            android:textSize="45dp"
            android:textStyle="bold" />

        <!-- Add images to buttons-->
        <Button
            android:id="@+id/accountSettingsBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/menuTitle"
            android:layout_marginTop="56dp"
            android:background="@drawable/rounded_corners_1"
            android:drawableRight="@drawable/account"
            android:fontFamily="@font/roboto_mono"
            android:paddingHorizontal="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="12dp"
            android:text="account"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/crisisHotlinesBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/accountSettingsBtn"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_2"
            android:drawableRight="@drawable/crisishotlines"
            android:fontFamily="@font/roboto_mono"
            android:paddingHorizontal="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="12dp"
            android:text="crisis hotlines"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/aboutUsBtn"
            android:layout_width="394dp"
            android:layout_height="80dp"
            android:layout_below="@id/crisisHotlinesBtn"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_3"
            android:drawableRight="@drawable/aboutus"
            android:fontFamily="@font/roboto_mono"
            android:paddingHorizontal="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="12dp"
            android:text="about us"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>