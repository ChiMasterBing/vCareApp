<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".ThanksSubmit">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_arrowback" />

    <TextView
        android:id="@+id/thanksTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtn"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/roboto_mono"
        android:paddingHorizontal="10dp"
        android:text="Thank you for your feedback!"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appreciateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thanksTxt"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_mono"
        android:paddingHorizontal="10dp"
        android:text="We really appreciate it."
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="233dp"
        android:layout_height="185dp"
        android:layout_below="@id/appreciateTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/leaf" />

</RelativeLayout>